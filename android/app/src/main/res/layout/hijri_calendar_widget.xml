            <TextView
                android:id="@+id/hijri_day_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الأربعاء"
                android:textSize="14sp"
                android:textColor="#D4AF85"
                android:fontFamily="@font/kufi"
                android:gravity="center" />
            
            <!-- Hijri Date -->
            <TextView
                android:id="@+id/hijri_date_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="٨ / ١٤٤٦"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/kufi"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content Card - البطاقة الرئيسية -->
    <LinearLayout
        android:id="@+id/main_content_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/main_card_background"
        android:padding="20dp"
        android:elevation="6dp">

        <!-- Main Title Text -->
        <TextView
            android:id="@+id/remaining_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="متبقي من الشهر"
            android:textSize="16sp"
            android:textColor="#2D3748"
            android:fontFamily="@font/kufi"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Days Counter with Decorative Elements -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <!-- Decorative Element -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="◦"
                android:textSize="20sp"
                android:textColor="#D69E2E"
                android:layout_marginEnd="8dp" />

            <!-- Days Count -->
            <TextView
                android:id="@+id/hijri_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="٢٢"
                android:textSize="48sp"
                android:textColor="#D69E2E"
                android:fontFamily="@font/kufi"
                android:textStyle="bold"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <!-- Days Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" يوماً"
                android:textSize="18sp"
                android:textColor="#2D3748"
                android:fontFamily="@font/kufi"
                android:textStyle="bold"
                android:layout_marginStart="4dp" />

            <!-- Decorative Element -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="◦"
                android:textSize="20sp"
                android:textColor="#D69E2E"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Progress Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp">

            <!-- Progress Bar Background -->
            <View
                android:layout_width="120dp"
                android:layout_height="4dp"
                android:background="#E2E8F0"
                android:layout_marginEnd="8dp" />

            <!-- Progress Indicator Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="◈"
                android:textSize="12sp"
                android:textColor="#D69E2E" />

            <!-- Progress Bar Background -->
            <View
                android:layout_width="120dp"
                android:layout_height="4dp"
                android:background="#E2E8F0"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Footer Section - القسم السفلي -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp">

        <!-- Left: Hijri Year -->
        <TextView
            android:id="@+id/hijri_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="١٤٤٦ هـ"
            android:textSize="14sp"
            android:textColor="#D4AF85"
            android:fontFamily="@font/kufi"
            android:textStyle="bold"
            android:gravity="start" />

        <!-- Right: Islamic Greeting -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بارك الله في أيامكم"
            android:textSize="12sp"
            android:textColor="#D4AF85"
            android:fontFamily="@font/kufi"
            android:gravity="end" />

    </LinearLayout>

    <!-- Hidden Progress Bar for Data Binding -->
    <ProgressBar
        android:id="@+id/month_progress_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>
