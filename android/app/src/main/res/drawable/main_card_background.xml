<?xml version="1.0" encoding="utf-8"?>
<!-- خلفية البطاقة الرئيسية بتدرج ذهبي إسلامي - Main card background with Islamic golden gradient -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- تدرج لوني من الذهبي الفاتح إلى الكريمي الدافئ -->
    <!-- Gradient from light gold to warm cream -->
    <gradient
        android:angle="45"
        android:startColor="#F7FAFC"
        android:centerColor="#FBF3E0"
        android:endColor="#ECC94B"
        android:type="linear" />
    
    <!-- زوايا مدورة لمظهر عصري وأنيق -->
    <corners android:radius="14dp" />
    
    <!-- ظل داخلي رقيق للعمق -->
    <stroke
        android:width="1dp"
        android:color="#E2E8F0" />
        
</shape>
